<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style>
    .contactsViewButtonHPanel {
      margin: 5px 0 0 5px;
    }

    .contactsViewContactsFlexTable {
      margin: 5px 0 5px 0;
    }

    .contactsViewListPanel {
      width: 100%;
    }
  </ui:style>

  <g:VerticalPanel addStyleNames="{style.contactsViewListPanel}">
    <g:HorizontalPanel addStyleNames="{style.contactsViewButtonHPanel}">
      <g:Button ui:field="_addButton">Add</g:Button>
      <g:Button ui:field="_deleteButton">Delete</g:Button>
    </g:HorizontalPanel>
    <g:FlexTable ui:field="_contactsTable" addStyleNames="{style.contactsViewContactsFlexTable}"/>
  </g:VerticalPanel>
</ui:UiBinder>

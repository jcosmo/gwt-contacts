<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
    "-//Puppy Crawl//DTD Suppressions 1.1//EN"
    "http://www.puppycrawl.com/dtds/suppressions_1_1.dtd">

<suppressions>
  <!--
  Turn off checks for UI Binder elements
  <suppress checks="VisibilityModifier" files=".*[\\/]client[\\/]view[\\/].*UI\.java"/>
  <suppress checks="ConstantName" files=".*[\\/]client[\\/]view[\\/].*UI\.java"/>
  -->

  <!-- Lots of magic numbers abound in layout code -->
  <suppress checks="MagicNumber" files=".*[\\/]client[\\/]view[\\/].*UI\.java"/>

  <!-- Turn off naming checks for persistent objects -->
  <suppress checks="MemberName" files=".*[\\/]server[\\/].*Bean\.java"/>
  <suppress checks="ConstantName" files=".*[\\/]server[\\/].*Bean\.java"/>

  <!-- Turn off all checks for generated code. -->
  <suppress checks="." files=".*[\\/]generated[\\/].*\.java"/>
</suppressions>
